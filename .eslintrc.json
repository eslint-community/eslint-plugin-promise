{
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "plugins": [
    "eslint-plugin"
  ],
  "extends": [
    "plugin:eslint-plugin/recommended"
  ],
  "rules": {
    "eslint-plugin/require-meta-docs-url": [
      "error",
      {
        "pattern": "https://github.com/xjamundx/eslint-plugin-promise#{{name}}"
      }
    ]
  }
}
